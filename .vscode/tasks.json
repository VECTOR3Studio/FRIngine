{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: clang++ build project",
      "command": "/usr/bin/clang++",
      "args": [
        "-std=c++17",
        "-g",
        // List all your .cpp source files here
        "${workspaceFolder}/main.cpp",
        "${workspaceFolder}/Player.cpp",
        // The output executable name
        "-o",
        "${workspaceFolder}/FRIngine",
        // SFML include and library paths
        "-I/opt/homebrew/include",
        "-L/opt/homebrew/lib",
        "-lsfml-graphics",
        "-lsfml-window",
        "-lsfml-system"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Compiler: /usr/bin/clang++"
    }
  ]
}